<h3 class="ui header">{{t "forms.i-i-s-umnyjj-dom-вид-услуги-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.наименование
      class=(if (v-get validationObject "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-umnyjj-dom-вид-услуги-e.наименование-caption")
      data-test-i-i-s-umnyjj-dom-вид-услуги-e-------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "наименование" "messages")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.ресурс
      class=(if (v-get validationObject "ресурс" "isInvalid") "error")
      label=(t "forms.i-i-s-umnyjj-dom-вид-услуги-e.ресурс-caption")
      data-test-i-i-s-umnyjj-dom-вид-услуги-e-------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "ресурс" "messages")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-umnyjj-dom-вид-услуги-e.актуальность-caption"}}</label>
    {{flexberry-checkbox
      readonly=readonly
      value=model.актуальность
      data-test-i-i-s-umnyjj-dom-вид-услуги-e-------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "актуальность" "messages")}}
  </div>

</form>